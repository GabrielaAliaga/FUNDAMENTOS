#include <iostream>

using namespace std;

int main()
{
    float n1, n2, n3, s, p;
    cin>>n1;
    cin>>n2;
    cin>>n3;
    if(n1>=0&&n1<=10)
    {
        if(n2>=0&&n2<=10)
        {
            if(n3>=0&&n3<=10)
            {
                s=n1+n2+n3;
                p=s/3;
                cout<<"el promedio es: ";
                cout<<p;
            }
        }
    }
  else;
    {
     cout<<"error ";
    }
    return 0;
}















