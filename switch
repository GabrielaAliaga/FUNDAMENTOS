*******************************************************************************/
#include <iostream>

using namespace std;

int main()
{
    int a,b,r,opcion;
    cout<<"ingrese el valor de a: ";
    cin>>a;
    cout<<"ingrese el valor de b: ";
    cin>>b;
    do{
        cout<<"\tmenu "<<endl;// \t es un tabulador
        cout<<"1.- suma"<< endl;
        cout<<"2.- resta"<<endl;
        cout<<"3.- producto"<<endl;
        cout<<"4.- divisio"<<endl;
        cout<<"0.- salir"<< endl;
        cout<<"elige una opcion:"<<endl;
        cin>>opcion;
        switch(opcion){
           case 1: r=a+b;
               break;
           case 2: r=a-b;
               break;
           case 3: r=a*b;
               break;
           case 4: r=a/b;
               break;
           case 0: cout<<"salir"<<endl;
               break;
           default: cout<<"opcion invalida"<<endl;
      }  
      cout<<"el resultado es"<<r<<endl;
    }while(opcion!=0); 
    return 0;
}
