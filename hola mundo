#include <iostream>

using namespace std;

int main()
{
    //Declarar variables
   int a,b,r;
   cout<<"ingresa el valor: ";
   cin>>a;
   cout<<"ingresa un valor: ";
   cin>>b;
   r=a+b;
  
   cout<<"la suma es: "<<r<<endl;
   r=a*b;
   cout<<"la multiplicacion es: "<<r<<endl;
}
