*******************************************************************************/
#include <iostream>
#define MAX 100
using namespace std;

void cargar(int vec[], int tam);
void mostrar(int vec[], int tam);
bool busqueda (int vec[], int tam, int elem);
void burbuja(int vec[], int tam);
float promedio(int vec[], int tam);

int main(){
    int opcion, tam;
    int vector[MAX];
    cout<<"Ingrese el tamaÃ±o del vector: ";
    cin>>tam;
    do{
    cout<<"Elija las siguientes opciones: "<<endl;
    cin>>opcion;
    cout<<"0. Salir"<<endl;
    cout<<"1. Cargar"<<endl;
    cout<<"2. Mostrar"<<endl;
    cout<<"3. Busquda"<<endl;
    cout<<"4. Burbuja"<<endl;
    cout<<"5. Promedio"<<endl;
    switch(opcion){
        case 1 :
            cargar(vector,tam);
        break;
        case 2:
            mostrar(vector, tam);
        break;
        case 3 :
            int aux;
            cout<<"Ingrese el elemento que desea buscar: ";
            cin>>aux;
            if(busqueda(vector, tam, aux)) cout<<"Se encuentra"<<endl;
            else cout<<"No se encuentra"<<endl;
        break;
        case 4 :
            burbuja(vector, tam);
        break;
        case 5 :
            cout<<"Promedio = "<<promedio(vector, tam);
        break;
        case 0: return 0;
    }
    }while(opcion!=0);
    return 0;
}
void cargar(int vec[], int tam){
    for(int i=0; i<tam; i++)
    {
        cout<<"ingresar el elemento";
        cin>>vec[i];
    }
}

void mostrar(int vec[], int tam){
    for (int i=0; i<tam; i++)
    {
        cout<<"Mostrar el resultado";
        cout<<vec[i];
    }
}
bool busqueda (int vec[], int tam, int elem){
    bool aux=false;
    for (int i=0; i<tam; i++){
        if (vec[i]==elem){
            aux=true;
            return aux;
        }
    }
    return aux;
}
void burbuja(int vec[], int tam){
    // Ordenado ascendenemente 
    // [20 5 7 8 9 ]
    int aux = 0;
    for(int i = 0 ; i<tam -1 ; i++){
        for(int j = i+1; j<tam; j++){
            if(vec [i] < vec [j]) {
                aux = vec[j];
                vec [j] = vec  [i];
                vec [i] = aux;
            }
        }
    }
    mostrar(vec, tam);
    
}
float promedio(int vec[], int tam){
    int suma=0;
    for (int i=0; i<tam; i++)
    suma=suma+vec[i];
return suma/tam;
}
